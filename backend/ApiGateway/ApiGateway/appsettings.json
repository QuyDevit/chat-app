{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "identity_route": {
        "ClusterId": "identity_cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        }
      },
      "chat_route": {
        "ClusterId": "chat_cluster",
        "Match": {
          "Path": "/chat/{**catch-all}"
        }
      },
      "notification_route": {
        "ClusterId": "notification_cluster",
        "Match": {
          "Path": "/notification/{**catch-all}"
        }
      },
      "realtime_route": {
        "ClusterId": "realtime_cluster",
        "Match": {
          "Path": "/realtime/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity_cluster": {
        "Destinations": {
          "identity_api": { "Address": "https://localhost:6020" }
        }
      },
      "chat_cluster": {
        "Destinations": {
          "chat_api": { "Address": "https://localhost:6030" }
        }
      },
      "notification_cluster": {
        "Destinations": {
          "notification_api": { "Address": "https://localhost:6040" }
        }
      },
      "realtime_cluster": {
        "Destinations": {
          "realtime_api": { "Address": "https://localhost:6050" }
        }
      }
    }
  },
  "AllowedHosts": "*"
}